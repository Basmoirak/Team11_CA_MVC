@model IEnumerable<Team11_CA.Shop.Core.Models.Product>

<br />
<div class="form-inline lg-form form-sm mt-0">
    <input class="form-control form-control-sm ml-3 w-100" type="text" placeholder="Search"
           name="searchStr" id="searchBox" autofocus style="width: 800px">
    
</div>
<br/>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-lg-3">
            <div class="panel panel-primary">
                <img class="img" style="height:200px; margin-left:20px;" src="~/Images/@item.Image" />

                <div class="panel-heading">
                    <h4>@Html.ActionLink(item.Name, "ProductDetails", new { id = item.Id }, new { @style = "text-decoration: none; color: white" })</h4>
                </div>
                <div class="panel-body" style="max-height: 90px; overflow-y: scroll;">
                    <p>@item.Description</p>
                    <h4>$@item.Price</h4>
                </div>
                <div class="panel-footer">
                    @using (Html.BeginForm("AddToBasket", "Basket", FormMethod.Post))
                    {
            
                        <div class="plusmimus">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="button" id="sub" class="sub btn btn-success">-</button>
                            <input type="text" id="1" value="1" min="1" style="width: 20px" name="quantity"/>
                            <button type="button" id="add" class="add btn btn-success">+</button>
                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart</button>
                        </div>
                    
                    }

                </div>
            </div>
        </div>
    }
</div>
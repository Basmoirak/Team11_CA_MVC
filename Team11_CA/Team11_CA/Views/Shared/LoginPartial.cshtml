
@if(Session["SessionID"] != null)
{
    using (Html.BeginForm( new { @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome @Session["FirstName"].ToString(), @Session["LastName"].ToString() <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Purchase History", "MyPurchases", "Basket")</li>
                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
            </ul>
        </li>
    </ul>

    }
    }
    else
    {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account")</li>
        <li>@Html.ActionLink("Log in", "Login", "Account")</li>
    </ul>
    }
